<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulclaro"
    android:fillViewport="true"
    tools:context=".SugerenciasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/marco3"
            android:paddingVertical="10dp"
            android:text="@string/buzon"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/tv_Correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/marco_blanco"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="CORREO"
            android:paddingVertical="15dp"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/tv_Mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/marco_blanco_grande"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="ESCRIBA AQUÍ SU MENSAJE"
            android:lines="10"
            android:maxLines="15"
            android:minLines="6"
            android:paddingHorizontal="10dp"
            android:paddingVertical="30dp"
            android:scrollbars="vertical"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:background="@drawable/marco"
                android:fontFamily="sans-serif-light"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"
                android:text="@string/enviar"
                android:textSize="45dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UbicacionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/ubicacion"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="50dp" />

        <EditText
            android:id="@+id/tv_colonia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/marco2"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="@string/colonia_hint"
            android:paddingVertical="15dp"
            android:textColorHint="@color/negro"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/tv_calle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/marco2"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="@string/calle_hint"
            android:paddingVertical="15dp"
            android:textColorHint="@color/negro"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/tv_numero_casa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/marco2"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="@string/casa_hint"
            android:inputType="number"
            android:paddingVertical="15dp"
            android:textColorHint="@color/negro"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Acceder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:background="@drawable/marco"
                android:fontFamily="sans-serif-light"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"
                android:text="@string/boton"
                android:textSize="45dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>